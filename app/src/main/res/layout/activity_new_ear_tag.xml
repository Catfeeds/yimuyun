<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <include layout="@layout/view_toolbar" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_line_grey" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_content_bg"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/iv_livestock_head"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="耳标编号"
                            android:textColor="@color/color_normal_text"
                            android:textSize="@dimen/home_normal_text_size" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="top"
                            android:text="*"
                            android:textColor="@color/colorRed"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_equipmentid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:drawablePadding="7dp"
                        android:text=""
                        android:textColor="#999999"
                        android:textSize="@dimen/home_normal_text_size" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_livestock_head"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="right"
                    android:layout_marginRight="25dp"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/ic_default_head"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_picture"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="right"
                    android:drawablePadding="7dp"
                    android:drawableRight="@mipmap/btn_right_back"
                    android:gravity="right|center_vertical"
                    android:hint="请选择图片"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:textColor="@color/color_normal_text"
                    android:textColorHint="@color/color_grey_text"
                    android:textSize="@dimen/home_normal_text_size"
                    android:visibility="visible" />


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/color_line_grey" />

            <LinearLayout
                android:id="@+id/ll_parent_equipment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="母体编号"
                    android:textColor="@color/color_normal_text"
                    android:textSize="@dimen/home_normal_text_size" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/colorRed"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_parent_equipmentid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:drawablePadding="7dp"
                    android:gravity="right|center_vertical"
                    android:hint=""
                    android:paddingBottom="5dp"
                    android:drawableRight="@mipmap/btn_right_back"
                    android:paddingTop="5dp"
                    android:textColor="@color/color_normal_text"
                    android:textColorHint="@color/color_grey_text"
                    android:textSize="@dimen/home_normal_text_size" />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/color_line_grey" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="13dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="13dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="类型"
                    android:textColor="@color/color_normal_text"
                    android:textSize="@dimen/home_normal_text_size" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:textColor="@color/colorRed"
                    android:textSize="16sp" />

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="20dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <RadioButton
                        android:id="@+id/rb_cow"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:button="@drawable/checked_selector"
                        android:checked="true"
                        android:paddingLeft="5dp"
                        android:text="牛"
                        android:textColor="@color/color_normal_text"
                        android:textSize="@dimen/home_normal_text_size" />

                    <RadioButton
                        android:id="@+id/rb_sheep"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:button="@drawable/checked_selector"
                        android:paddingLeft="5dp"
                        android:text="羊"
                        android:textColor="@color/color_normal_text"
                        android:textSize="@dimen/home_normal_text_size" />


                </RadioGroup>


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/color_line_grey" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="品种"
                    android:textColor="@color/color_normal_text"
                    android:textSize="@dimen/home_normal_text_size" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:textColor="@color/colorRed"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_varieties"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:drawablePadding="7dp"
                    android:drawableRight="@mipmap/btn_right_back"
                    android:gravity="right|center_vertical"
                    android:hint="请选择品种"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:textColor="@color/color_normal_text"
                    android:textColorHint="@color/color_grey_text"
                    android:textSize="@dimen/home_normal_text_size" />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/color_line_grey" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="13dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="13dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="性别"
                    android:textColor="@color/color_normal_text"
                    android:textSize="@dimen/home_normal_text_size" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:textColor="@color/colorRed"
                    android:textSize="16sp" />

                <RadioGroup
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="80dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <RadioButton
                        android:id="@+id/rb_male"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:button="@drawable/checked_selector"
                        android:checked="true"
                        android:paddingLeft="5dp"
                        android:text="公"
                        android:textColor="@color/color_normal_text"
                        android:textSize="@dimen/home_normal_text_size" />
                    <RadioButton
                        android:id="@+id/rb_xieyang"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:button="@drawable/checked_selector"
                        android:checked="true"
                        android:paddingLeft="5dp"
                        android:text="羯羊"
                        android:visibility="invisible"
                        android:textColor="@color/color_normal_text"
                        android:textSize="@dimen/home_normal_text_size" />

                    <RadioButton
                        android:id="@+id/rb_female"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:button="@drawable/checked_selector"
                        android:paddingLeft="5dp"
                        android:text="母"
                        android:textColor="@color/color_normal_text"
                        android:textSize="@dimen/home_normal_text_size" />


                </RadioGroup>

                <TextView
                    android:id="@+id/tv_is_pregnancy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginLeft="10dp"
                    android:drawablePadding="7dp"
                    android:drawableRight="@mipmap/btn_right_back"
                    android:gravity="right|center_vertical"
                    android:hint="是否怀孕"
                    android:textColor="@color/color_normal_text"
                    android:textColorHint="@color/color_grey_text"
                    android:textSize="@dimen/home_normal_text_size"
                    android:visibility="invisible" />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/color_line_grey" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@color/colorWhite"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="入栏重量"
                    android:textColor="@color/color_normal_text"
                    android:textSize="@dimen/home_normal_text_size" />

                <EditText
                    android:id="@+id/et_lairage_weight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="8dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:digits="01234567890."
                    android:gravity="right|center_vertical"
                    android:hint="请输入"
                    android:inputType="number"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:text=""
                    android:textColor="@color/color_normal_text"
                    android:textColorHint="@color/color_grey_text"
                    android:textSize="@dimen/home_normal_text_size" />

                <TextView
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"
                    android:gravity="right|center_vertical"
                    android:text="公斤"
                    android:textColor="@color/color_normal_text"
                    android:textSize="@dimen/home_normal_text_size" />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/color_line_grey" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="入栏时间"
                    android:textColor="@color/color_normal_text"
                    android:textSize="@dimen/home_normal_text_size" />

                <TextView
                    android:id="@+id/tv_lairage_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:drawablePadding="7dp"
                    android:drawableRight="@mipmap/btn_right_back"
                    android:gravity="right|center_vertical"
                    android:hint="请选择入栏时间"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:textColor="@color/color_normal_text"
                    android:textColorHint="@color/color_grey_text"
                    android:textSize="@dimen/home_normal_text_size" />


            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/color_line_grey" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@color/colorWhite"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="出生重量"
                    android:textColor="@color/color_normal_text"
                    android:textSize="@dimen/home_normal_text_size" />

                <EditText
                    android:id="@+id/et_init_weight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="8dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:digits="01234567890."
                    android:gravity="right|center_vertical"
                    android:hint="请输入"
                    android:inputType="number"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:text=""
                    android:textColor="@color/color_normal_text"
                    android:textColorHint="@color/color_grey_text"
                    android:textSize="@dimen/home_normal_text_size" />

                <TextView
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"
                    android:gravity="right|center_vertical"
                    android:text="公斤"
                    android:textColor="@color/color_normal_text"
                    android:textSize="@dimen/home_normal_text_size" />


            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/color_line_grey" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="出生时间"
                    android:textColor="@color/color_normal_text"
                    android:textSize="@dimen/home_normal_text_size" />

                <TextView
                    android:id="@+id/tv_birthday_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:drawablePadding="7dp"
                    android:drawableRight="@mipmap/btn_right_back"
                    android:gravity="right|center_vertical"
                    android:hint="请选择出生时间"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:textColor="@color/color_normal_text"
                    android:textColorHint="@color/color_grey_text"
                    android:textSize="@dimen/home_normal_text_size" />


            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/color_line_grey" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@color/colorWhite"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="出生地"
                    android:textColor="@color/color_normal_text"
                    android:textSize="@dimen/home_normal_text_size" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:textColor="@color/colorRed"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/et_birthday_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="8dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="right|center_vertical"
                    android:hint="请输入"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:text=""
                    android:textColor="@color/color_normal_text"
                    android:textColorHint="@color/color_grey_text"
                    android:textSize="@dimen/home_normal_text_size" />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="@color/color_line_grey" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@color/colorWhite"
                android:gravity="center_vertical"
                android:orientation="horizontal"

                android:paddingBottom="8dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="畜主"
                    android:textColor="@color/color_normal_text"
                    android:textSize="@dimen/home_normal_text_size" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:textColor="@color/colorRed"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_deal_personnel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:drawablePadding="7dp"
                    android:drawableRight="@mipmap/btn_right_back"
                    android:gravity="right|center_vertical"
                    android:hint="请选择畜主"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:textColor="@color/color_normal_text"
                    android:textColorHint="@color/color_grey_text"
                    android:textSize="@dimen/home_normal_text_size" />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_line_grey" />


        </LinearLayout>
    </ScrollView>
</LinearLayout>